@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EPiServer.Web.Mvc.Html;
@using Labb.Features.Shared.Navbar;
@model NavbarViewModel

<div class="header">
    <nav class="nav">
        <div class="nav-items">
            @if(Model.NavItems != null)
            {
                foreach (var i in Model.NavItems)
                {
                    <a class="nav-item" href="@Url.ContentUrl(i.PageLink)">@i.Name</a>
                }
            }
        </div>
        @*<partial name="~/Features/Shared/Views/_LoginPartial.cshtml" model="Model"/>*@
        <ul class="navbar-nav">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <span class="navbar-text text-dark">Hello @User.Identity.Name!</span>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Model.MyProfileUrl">My Profile</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Model.SignOutUrl">Sign out</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Model.SignInUrl">Sign in</a>
                </li>
            }
        </ul>
    </nav>
</div>