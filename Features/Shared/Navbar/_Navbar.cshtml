@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using EPiServer.Web.Mvc.Html;
@model IEnumerable<PageData>
@{
    var startPage = Model.FirstOrDefault();
}

<div class="header">
    <nav class="nav">
        <div class="nav-items">
            @foreach (var i in Model)
            {
                <a class="nav-item" href="@Url.ContentUrl(i.PageLink)">@i.Name</a>
            }
        </div>
        @*<partial name="~/Features/Shared/Views/_LoginPartial.cshtml" model="Model"/>*@
        <ul class="navbar-nav">
            @if (User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <span class="navbar-text text-dark">Hello @User.Identity.Name!</span>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Url.ContentUrl(startPage.ContentLink)SignOut">Sign out</a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" href="@Url.ContentUrl(startPage.ContentLink)SignIn">Sign in</a>
                </li>
            }
        </ul>
    </nav>
</div>